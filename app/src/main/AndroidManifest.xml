        <activity
            android:name=".DeleteHabit"
            android:label="@string/title_activity_delete_habit" >
        </activity>
        <activity
            android:name=".ViewCompleteHabit"
            android:label="@string/title_activity_view_complete_habit" >
        </activity>
        <activity
